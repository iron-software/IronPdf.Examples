<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ipv="clr-namespace:IronPdf.Viewer.Maui;assembly=IronPdf.Viewer.Maui"
             x:Class="IronPdfViewerApp.ViewerPage"
             Title="ViewerPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" VerticalTextAlignment="Center">HTML:</Label>
        <Entry x:Name="htmlContent" Grid.Row="0" Grid.Column="1"></Entry>
        <Button Grid.Row="0" Grid.Column="2" Text="Render" Clicked="Button_OnClicked"></Button>
        <ipv:IronPdfView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" x:Name="pdfView"/>
    </Grid>
</ContentPage>